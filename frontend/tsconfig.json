{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "style/*": [ "src/static/*" ],
    },
    "plugins": [{ "name": "dts-css-modules-loader" }]
  },
  "include": [
    "./src",
    "./webpack.config.ts",
    "./typings-custom/**/*.ts"
  ]
}
